@model UpdateRoleViewModel
@{
    ViewData["Title"] = "Edit";
}
<h1> Update Role</h1>
<hr />
<form method="post" asp-action="Edit" class="mt-4">
    <input asp-for="Id" class="form-control" hidden />

    <div class="form-group mt-2">

        <label asp-for="@Model.Name"></label>

        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" />
        <div class="input-group mt-2 justify-content-center">

            <button type="submit" class="btn btn-success m-2">Edit</button>

            <a class="btn btn-secondary m-2" asp-action="Index">Back to index</a>

        </div>

    </div>

</form>
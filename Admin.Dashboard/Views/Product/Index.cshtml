@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Index";
}


@if (TempData["SuccessMessage"] is not null)
{
    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<h1>All Products</h1>
<hr />
<a asp-action="Create" class="btn btn-primary">Add New Product</a>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>Picture</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Description</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Product in Model)
            {
                <tr class="align-middle">
                    <td class="fw-semibold">@Product.Id</td>

                    <td>
                        <img src="~/Files/products/@Product.PictureUrl"
                             class="img-thumbnail"
                             style="width: 70px; height: 70px; object-fit: cover;" />
                    </td>

                    <td class="fw-semibold">@Product.Name</td>
                    <td class="text-muted" style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @Product.Description
                    </td>

                    <td class="fw-bold text-success">@Product.Price</td>
                    <td>@Product.Brand!.Name</td>
                    <td>@Product.Type!.Name</td>

                    <td>
                        <a class="btn btn-sm btn-warning text-white me-1" asp-action="Edit" asp-route-id="@Product.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a class="btn btn-sm btn-danger text-white"
                           href="javascript:void(0);"
                           onclick="confirmDelete('@Url.Action("Delete", new { id = Product.Id })')">
                            <i class="fa-solid fa-trash"></i>
                        </a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Products</h2>

    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function confirmDelete(url) {
            if (confirm("Are you sure you want to delete this product?")) {
                window.location.href = url;
            }
        }
    </script>
}

@model IEnumerable<BrandAndTypeViewModel> 
@{
    ViewData["Title"] = "Index";
}



@if (TempData["SuccessMessage"] is not null)
{
    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<h1>All Brands</h1>
<hr />
<partial name="CreateBrandPartialView" model="new CreatedBrandAndTypeViewModel()" />

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Brand in Model)
            {
                <tr class="align-middle">
                    <td class="fw-semibold">@Brand.Id</td>

                    <td class="fw-semibold">@Brand.Name</td>
                    <td>
                        <a class="btn btn-sm btn-warning text-white me-1" asp-action="Edit" asp-route-id="@Brand.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a class="btn btn-sm btn-danger text-white"
                           href="javascript:void(0);"
                           onclick="confirmDelete('@Url.Action("Delete", new { id = Brand.Id })')">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Products</h2>

    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function confirmDelete(url) {
            if (confirm("Are you sure you want to delete this Brand?")) {
                window.location.href = url;
            }
        }
    </script>
}